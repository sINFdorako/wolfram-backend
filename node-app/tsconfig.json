{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": "./core/types"
  },
  "include": [
    "features/**/*.ts",
    "core/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ],
  "typeRoots": ["./node_modules/@types", "./core/types"]
}